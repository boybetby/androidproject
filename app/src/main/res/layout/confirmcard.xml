        android:text="Cây tùng anh" />

    <TextView
        android:id="@+id/confirmProductAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_weight="1"
        android:text="x 2" />
</LinearLayout>